---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}</link>
    <description>{{ site.description | xml_escape }}</description>
    {% assign pages = site.pages | where_exp:'p','p.layout=="page"' %}
    {% for p in site.episodes %}
      <item>
        <title>{{ p.title | xml_escape }}</title>
        <link>{{ site.url }}{{ p.url }}</link>
        <guid isPermaLink="false">{{ p.url }}</guid>
        <description>{{ p.summary | xml_escape }}</description>
        <pubDate>{{ p.date | date_to_rfc822 }}</pubDate>
      </item>
    {% endfor %}
  </channel>
</rss>
